<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <Company>Algerian Cheque Filler</Company>
    <Product>Algerian Cheque Filler</Product>
    <Description>Desktop application for printing user-entered data onto pre-printed Algerian cheques</Description>
    <Copyright>Copyright Â© 2025</Copyright>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\default_template.json" />
    <None Remove="Resources\cheque_background.png" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Resources\default_template.json" />
    <Resource Include="Resources\cheque_background.png" />
  </ItemGroup>

</Project>
