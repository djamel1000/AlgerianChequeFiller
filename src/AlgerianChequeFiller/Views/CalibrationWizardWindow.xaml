<Window x:Class="AlgerianChequeFiller.Views.CalibrationWizardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assistant de Calibration - Algerian Cheque Filler"
        Width="650" Height="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="üéØ Assistant de Calibration"
                       FontSize="24" FontWeight="Bold"
                       Foreground="{StaticResource TextPrimaryBrush}"/>
            <TextBlock Text="Ajustez le d√©calage X/Y pour un alignement parfait"
                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,24,0,24">
            <StackPanel>
                <!-- Step 1 -->
                <TextBlock Text="√âtape 1: Imprimez la page de test"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="22"
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,16">
                    Imprimez le test d'alignement sur une feuille blanche. Les rectangles montrent les zones des champs.
                </TextBlock>

                <Button x:Name="PrintTestButton" Content="üñ®Ô∏è Imprimer Page de Test"
                        Style="{StaticResource SecondaryButton}"
                        Click="OnPrintTestClick" Width="240" HorizontalAlignment="Left"
                        Margin="0,0,0,24"/>

                <!-- Step 2 -->
                <TextBlock Text="√âtape 2: Mesurez le d√©calage"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="22"
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,16">
                    Comparez l'impression avec un vrai ch√®que. Mesurez le d√©calage en millim√®tres.
                </TextBlock>

                <!-- Offset Inputs -->
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="D√©calage X (mm)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="OffsetXTextBox" Text="0"
                                 Style="{StaticResource InputTextBox}"/>
                        <TextBlock Text="+ vers la droite, - vers la gauche"
                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="D√©calage Y (mm)" Style="{StaticResource FormLabel}"/>
                        <TextBox x:Name="OffsetYTextBox" Text="0"
                                 Style="{StaticResource InputTextBox}"/>
                        <TextBlock Text="+ vers le bas, - vers le haut"
                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Step 3 -->
                <TextBlock Text="√âtape 3: V√©rifiez l'alignement"
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"/>
                <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="22"
                           Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,0">
                    Appliquez le d√©calage et imprimez √† nouveau pour v√©rifier.
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Annuler" Style="{StaticResource SecondaryButton}"
                    Click="OnCancelClick" Width="120" Margin="0,0,12,0"/>
            <Button Content="Appliquer" Style="{StaticResource PrimaryButton}"
                    Click="OnApplyClick" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
