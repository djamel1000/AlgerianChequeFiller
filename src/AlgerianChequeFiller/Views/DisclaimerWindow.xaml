<Window x:Class="AlgerianChequeFiller.Views.DisclaimerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Avertissement Légal - Algerian Cheque Filler"
        Width="600" Height="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="⚠️ AVERTISSEMENT IMPORTANT"
                       FontSize="22" FontWeight="Bold"
                       Foreground="{StaticResource WarningBrush}"
                       HorizontalAlignment="Center"/>
            <TextBlock Text="Veuillez lire attentivement avant de continuer"
                       FontSize="14"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Disclaimer Content -->
        <Border Grid.Row="1" Style="{StaticResource Card}" Margin="0,24,0,24">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock TextWrapping="Wrap" FontSize="14" LineHeight="24"
                               Foreground="{StaticResource TextPrimaryBrush}">
                        <Run FontWeight="Bold">Cette application est un outil de mise en forme pour l'impression de chèques.</Run>
                        <LineBreak/><LineBreak/>
                        En utilisant cette application, vous confirmez que:
                    </TextBlock>

                    <StackPanel Margin="0,16,0,0">
                        <TextBlock TextWrapping="Wrap" Margin="0,8" FontSize="13" LineHeight="22">
                            <Run FontWeight="Bold">• Autorisation:</Run> Vous êtes autorisé(e) à émettre des chèques sur le compte concerné.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,8" FontSize="13" LineHeight="22">
                            <Run FontWeight="Bold">• Exactitude:</Run> Les informations saisies sont exactes et véridiques.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,8" FontSize="13" LineHeight="22">
                            <Run FontWeight="Bold">• Responsabilité:</Run> Vous assumez l'entière responsabilité de l'utilisation de cette application.
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,8" FontSize="13" LineHeight="22">
                            <Run FontWeight="Bold">• Conformité:</Run> Vous êtes responsable du respect des lois bancaires algériennes.
                        </TextBlock>
                    </StackPanel>

                    <Border Background="#FFFBEB" CornerRadius="8" Padding="16" Margin="0,16,0,0">
                        <TextBlock TextWrapping="Wrap" FontSize="13" LineHeight="20"
                                   Foreground="#92400E">
                            ⚠️ Cette application n'est pas un système bancaire et ne valide pas les informations saisies.
                            Aucune garantie n'est fournie et les développeurs déclinent toute responsabilité.
                        </TextBlock>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Checkbox -->
        <CheckBox x:Name="AcceptCheckbox" Grid.Row="2"
                  Content="J'ai lu et j'accepte les conditions ci-dessus"
                  FontSize="14" FontWeight="SemiBold"
                  HorizontalAlignment="Center"
                  Cursor="Hand"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,24,0,0">
            <Button Content="Refuser" Style="{StaticResource SecondaryButton}"
                    Click="OnRefuseClick" Width="140" Margin="0,0,16,0"/>
            <Button x:Name="AcceptButton" Content="Accepter et Continuer"
                    Style="{StaticResource PrimaryButton}"
                    Click="OnAcceptClick" Width="200"
                    IsEnabled="{Binding IsChecked, ElementName=AcceptCheckbox}"/>
        </StackPanel>
    </Grid>
</Window>
